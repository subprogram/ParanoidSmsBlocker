    </style>

    <style name="ActionBarBaseTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>
    </style>

    <style name="PopupMenuBaseTheme" parent="ThemeOverlay.AppCompat">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
